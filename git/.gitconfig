[core]
	excludesfile = ~/.gitignore_global
[code]
	editor = code --wait
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[user]
	email = mihail.tratsiuk@gmail.com
	name = Mihail Tratsiuk

[push]
	default = current
	followTags = true

[alias]
	co = checkout
	cob = checkout -b
	pushf = push --force
	rb = rebase
	rbi = "!f() { git rebase -i HEAD~$1; }; f"
	amend = commit --amend
